{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug agent-intercom",
      "cargo": {
        "args": ["build", "--bin=agent-intercom"],
        "filter": {
          "name": "agent-intercom",
          "kind": "bin"
        }
      },
      "args": ["--config", "${workspaceFolder}/config.toml"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "info",
        "SLACK_APP_TOKEN": "${env:SLACK_APP_TOKEN}",
        "SLACK_BOT_TOKEN": "${env:SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${env:SLACK_TEAM_ID}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug agent-intercom-ctl",
      "cargo": {
        "args": ["build", "--bin=agent-intercom-ctl"],
        "filter": {
          "name": "agent-intercom-ctl",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug"
      }
    }
  ]
}
